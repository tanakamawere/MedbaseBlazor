@page "/"
@page "/home"
@using MedbaseLibrary.Models;
@using MedbaseLibrary.Services;
@inject NavigationManager navManager;
@inject IApiRepository repository

<!-- Header-->
<header class="py-5 background-state">
    <div class="px-4 pt-5 my-5 text-center border-bottom">
        <MudImage Src="img/medbase_transparent.png" Style="max-height:100px"/>
        <div class="col-lg-6 mx-auto">
            <MudText Typo="Typo.h6" Class="lead fw-normal text-light">Over 2,000 MCQs (with answers & explanations) on <strong>Pre-clinical</strong> and <strong>Clinical Medical School</strong> courses</MudText>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5">
                <MudButton Variant="Variant.Filled" Href="/courses" StartIcon="@Icons.Material.Filled.QuestionAnswer" Color="Color.Primary">MCQs</MudButton>
                <MudButton Variant="Variant.Filled" Href="/notes" StartIcon="@Icons.Material.Filled.NoteAdd" Color="Color.Primary">Notes (New)</MudButton>
                <MudButton Variant="Variant.Filled" Href="/about" StartIcon="@Icons.Material.Filled.Book" Color="Color.Primary">Learn More</MudButton>
            </div>
        </div>
        <div class="overflow-hidden" style="max-height: 30vh;">
            <div class="container px-5">
                <img src="img/notes.svg" class="img-fluid border rounded-3 shadow-lg mb-4" alt="Example image" width="700" height="500" loading="lazy">
            </div>
        </div>
    </div>

</header>

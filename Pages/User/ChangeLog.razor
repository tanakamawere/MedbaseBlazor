@page "/changelog"

<PageTitle>Medbase | Change Log</PageTitle>

<div class="container">
    <MudBreadcrumbs Items="_items"></MudBreadcrumbs>
    <div class="justify-content-center align-content-center">
        <ul>
            <li>
                <h2 class="fw-bold">Version 1.3</h2>
                <h5 class="text-muted">Release Date: 06 April 2023</h5>
                <ul>
                    <li>
                        <em>*New Feature*</em> Added Search function to the questions
                    </li>
                    <li>
                        <em>*New Feature*</em> Bottom navigation page for questions page
                    </li>
                </ul>
            </li>
            <li>
                <h2 class="fw-bold">Version 1.2</h2>
                <h5 class="text-muted">Release Date: 11 March 2023</h5>
                <ul>
                    <li>
                        Fixed error with quizzes that showed the same questions every session
                    </li>
                    <li>
                        <em>*New Feature*</em> Breadcrumbs for easier navigation on the website
                    </li>
                    <li>
                        <em>*New Feature*</em> Dark mode for mobile application
                    </li>
                    <li>
                        Added new courses => Immunology and Medical Microbiology (3rd Year)
                    </li>
                </ul>
            </li>
            <li>
                <h2 class="fw-bold">Version 1.1</h2>
                <h5 class="text-muted">Release Date: 2 March 2023</h5>
                <ul>
                    <li>
                        Changed database servers after break down of the website
                    </li>
                    <li>
                        Medbase is now completely free with premium plans and offerings scrapped
                    </li>
                    <li>
                        User accounts removed
                    </li>
                </ul>
            </li>
            <li>
                <h2 class="fw-bold">Version 1.0.4</h2>
                <h5 class="text-muted">Release Date: 14 February 2023</h5>
                <ul>
                    <li>
                        Bug fixes and improvements
                    </li>
                </ul>
            </li>
        </ul>
    </div>
</div>

@code {
    private List<BreadcrumbItem> _items = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "/home", icon: Icons.Material.Filled.Home),
        new BreadcrumbItem("Changes", href: "/changelog", icon: Icons.Material.Filled.ChangeHistory)
    };
}


<div class="col-xl-3 col-md-6">
    <div class="card bg-@Background text-white mb-1 m-3">
        <h3>@Title</h3>
        <h4>@Data</h4>
    </div>
</div>

@code {
    [Parameter]
    public string Background { get; set; } = "primary";
    [Parameter]
    public string Title { get; set; } = "Information";
    [Parameter]
    public string Data { get; set; } = "2555";
}
